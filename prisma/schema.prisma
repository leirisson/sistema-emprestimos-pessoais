generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id       String @id @default(uuid())
  nome     String
  telefone String
  endereco String
  createdAt DateTime @map("created_at") @default(now())
  updtatedAt DateTime @map("updated_at") @default(now())

  @@map("clientes")
}



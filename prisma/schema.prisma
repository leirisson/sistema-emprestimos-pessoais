generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id         String   @id @default(uuid())
  nome       String
  telefone   String
  endereco   String
  email      String   @unique
  password   String
  createdAt  DateTime @default(now()) @map("created_at")
  updtatedAt DateTime @default(now()) @map("updated_at")

  @@map("clientes")
}
